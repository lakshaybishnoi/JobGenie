{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "JobGenie Streamlit",
            "type": "python",
            "request": "launch",
            "program": "-m",
            "args": [
                "streamlit",
                "run",
                "app.py",
                "--server.port",
                "5000"
            ],
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}
